<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="640.0" prefWidth="480.0" style="-fx-background-color: #fdb10d;"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.simulation.MainWindow.MainWindowController">
    <Label fx:id="dailyTimeLabel" alignment="CENTER" layoutX="7.0" layoutY="590.0" prefHeight="38.0" prefWidth="91.0"
           style="-fx-border-radius: 12px; -fx-text-fill: #000000; -fx-border-width: 2px; -fx-border-color: #000000;"
           text="Time: 0" textAlignment="JUSTIFY" wrapText="true">
        <font>
            <Font name="Verdana Bold" size="16.0"/>
        </font>
    </Label>
    <Button fx:id="startBtn" alignment="CENTER" layoutX="200.0" layoutY="540.0" onAction="#startBtnClick"
            prefHeight="40.0" prefWidth="80.0"
            style="-fx-background-color: #92CD41; -fx-background-radius: 12px; -fx-text-fill: #000000; -fx-border-radius: 12px; -fx-border-color: #000000;"
            text="Start">
        <font>
            <Font name="Verdana Bold" size="18.0"/>
        </font>
    </Button>
    <Button fx:id="stopBtn" alignment="CENTER" disable="true" layoutX="200.0" layoutY="590.0" onAction="#stopBtnClick"
            prefHeight="40.0" prefWidth="80.0"
            style="-fx-background-color: #E76E55; -fx-background-radius: 12px; -fx-text-fill: #000000; -fx-border-radius: 12px; -fx-border-color: #000000;"
            text="Stop">
        <font>
            <Font name="Verdana Bold" size="18.0"/>
        </font>
    </Button>
    <CheckBox fx:id="showTimeBtn" layoutX="11.0" layoutY="566.0" onAction="#showTimeBtnClick" selected="true"
              style="-fx-text-fill: #000000; -fx-font-family: Verdana Bold;" stylesheets="@style.css" text="Show time">
        <font>
            <Font name="Verdana Bold" size="14.0"/>
        </font>
    </CheckBox>
    <RadioButton fx:id="showInfoBtn" focusTraversable="false" layoutX="10.0" layoutY="522.0" onAction="#infoBtnCLick"
                 selected="true" style="-fx-text-fill: #000000;" text="Show info">
        <toggleGroup>
            <ToggleGroup fx:id="btnInfoGroup"/>
        </toggleGroup>
        <font>
            <Font name="Verdana Bold" size="12.0"/>
        </font>
    </RadioButton>
    <RadioButton fx:id="hideInfoBtn" focusTraversable="false" layoutX="10.0" layoutY="541.0" onAction="#infoBtnCLick"
                 style="-fx-text-fill: #000000;" text="Hide info" toggleGroup="$btnInfoGroup">
        <font>
            <Font name="Verdana Bold" size="12.0"/>
        </font>
    </RadioButton>

    <MenuBar cache="true" style="-fx-background-color: #FDB10D; -fx-border-width: 1px; -fx-border-color: #000000">
        <Menu style="-fx-font-family: Verdana Bold;" text="Simulation">
            <MenuItem fx:id="startMenuItem" onAction="#startMenuItemClick" style="-fx-font-family: Verdana Bold; "
                      text="Start"/>
            <MenuItem fx:id="stopMenuItem" onAction="#stopMenuItemClick" style="-fx-font-family: Verdana Bold; "
                      text="Stop"/>
        </Menu>
        <Menu text="Time">
            <CheckMenuItem fx:id="showTimeMenuItem" onAction="#showTimeMenuItemClick" selected="true"
                           style="-fx-font-family: Verdana Bold;" text="Show time"/>
        </Menu>
        <Menu text="Info">
            <RadioMenuItem fx:id="showInfoMenuItem" onAction="#infoMenuItemClick" selected="true" text="Show info">
                <toggleGroup>
                    <ToggleGroup fx:id="menuInfoGroup"/>
                </toggleGroup>
            </RadioMenuItem>
            <RadioMenuItem fx:id="hideInfoMenuItem" onAction="#infoMenuItemClick" text="Hide info"
                           toggleGroup="$menuInfoGroup"/>
        </Menu>
    </MenuBar>


    <Label text="Male bee spawn time" layoutX="10" layoutY="330"
           style="-fx-font-family: Verdana Bold;
    -fx-font-size: 10px"/>
    <TextField fx:id="maleSpawnTimeTextField" layoutY="345" layoutX="10" text="2"
               style="-fx-background-radius: 12px;
                       -fx-background-color: #FDB10D;
                       -fx-border-radius: 12px;
                       -fx-border-color: #000000; "
               prefWidth="100" prefHeight="25"/>


    <Label text="Worker bee spawn time" layoutX="10" layoutY="375"
           style="-fx-font-family: Verdana Bold;
                  -fx-font-size: 10px"/>
    <TextField fx:id="workerSpawnTimeTextField" layoutY="390" layoutX="10" text="2"
               style="-fx-background-radius: 12px;
                       -fx-background-color: #FDB10D;
                       -fx-border-radius: 12px;
                       -fx-border-color: #000000; "
               prefWidth="100" prefHeight="25"/>

    <Label text="Male bee spawn chance" layoutX="10" layoutY="420"
           style="-fx-font-family: Verdana Bold; -fx-font-size: 10px"/>
    <ComboBox fx:id="maleBeeChanceComboBox" layoutY="435.0" layoutX="10" prefHeight="25.0" prefWidth="100.0"
              style="-fx-background-radius: 12px;
                     -fx-background-color: #FDB10D;
                     -fx-border-radius: 12px;
                     -fx-border-color: #000000;
                     -fx-text-fill: #000000;
                     -fx-font-family: Verdana Bold"/>

    <Label text="Worker bee spawn chance" layoutX="10" layoutY="465"
           style="-fx-font-family: Verdana Bold; -fx-font-size: 10px"/>
    <ComboBox fx:id="workerBeeChanceComboBox" layoutY="480.0" layoutX="10" prefHeight="25.0" prefWidth="100.0"
              style="-fx-background-radius: 12px;
                     -fx-background-color: #FDB10D;
                     -fx-border-radius: 12px;
                     -fx-border-color: #000000;
                     -fx-text-fill: #000000;
                     -fx-font-family: Verdana Bold"/>
</AnchorPane>
